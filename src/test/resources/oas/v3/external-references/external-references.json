          },
          {
            "$ref": "#/components/parameters/PageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "This is a list of the products in the catalog",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/500ApiError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "password": {
        "type": "oauth2",
        "flows": {
          "password": {
